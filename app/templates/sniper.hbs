<main>
  <img class='wallpaper' src='/wallpaper.jpg' alt=''>
  <div class='sniper-cont'>
    <div class='search'>
      {{input class='searchInput' type='search' enter='inputSearchQuery' value=searchInput placeholder='Search Query...'}}
      <div class='resultsPerPage'>
        <label>Results per page: </label>
        {{input class='resultsPerPageInput' type='number' value=resultsPerPageInput}}
      </div>
      <div>
        <button class='searchStreams' {{action 'searchStreams'}}>Search Streams</button>
        <button class='searchChannels' {{action 'searchChannels'}}>Search Channels</button>
      </div>
    </div>
    <div class='results'>

      <div class='results-nav'>
        <strong class='totalResults'>Total results: {{results.total.total}}</strong>
        <span class='pagination'>
          <button {{action 'prevPage'}}>{{fa-icon "chevron-left"}}</button>
          <label class='page'>{{currentPage}} / {{calc-total-pages limit results.total.total}}</label>
          <button {{action 'nextPage' results.total.total }}>{{fa-icon "chevron-right"}}</button>
        </span>
      </div>

      {{results-list results=results type=type}}

    </div>
  </div>
</main>
